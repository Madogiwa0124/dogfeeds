{
  "compilerOptions": {
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "importsNotUsedAsValues": "preserve",
    "baseUrl": "./",
    "paths": {
      "@js/*": ["app/javascript/*"]
    },
    "outDir": "public/dist" // allowjs:trueにしたときのvscodeのエラー回避のためoutDirを設定しとく
  },
  "include": [
    "app/javascript/**/*.ts",
    "app/javascript/**/*.js",
    "app/javascript/**/*.vue",
    "spec/javascript/**/*.spec.js",
    "spec/javascript/**/*.spec.ts",
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
