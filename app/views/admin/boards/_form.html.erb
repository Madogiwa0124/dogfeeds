<%= form_with model: [:admin, board], local: true do |f| %>
  <div class="field">
    <label class="label">タイトル</label>
    <p class="control">
      <%= f.text_field :title, class: "input" %>
    </p>
  </div>
  <div class="field">
    <label class="label">Feeds</label>
    <ul class="control">
      <li class="select">
        <%=
          f.collection_select(
            :feed_ids, Feed.all, :id, :title,
            { selected: board.board_feeds.map(&:feed_id) },
            include_hidden: false,
            size: Feed.all.count,
            multiple: true
          )
        %>
      </li>
    </ul>
  </div>
  <div class="field is-grouped is-grouped-right">
    <p class="control">
      <%= f.submit class: "button is-success" %>
    </p>
  </div>
<% end %>
