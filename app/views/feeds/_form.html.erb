<div class="card feed-form">
  <header class="card-header">
    <p class="card-header-title title"><%= title %></p>
  </header>
  <div class="card-content">
    <%= form_with model: feed, local: true do |f| %>
      <div class="field">
        <label class="label" for="feed_title">タイトル</label>
        <p class="control">
          <%= f.text_field :title, class: "input" %>
        </p>
        <p class="help">Rssフィードのタイトルを入力してください。(必須)</p>
      </div>
      <div class="field">
        <label class="label" for="feed_endpoint">Url</label>
        <p class="control">
          <%= f.text_field :endpoint, class: "input" %>
        </p>
        <p class="help">RssフィードのエンドポイントURLを入力してください。(必須)</p>
      </div>
      <div class="field">
        <tags-input :init_tags="<%= feed.tags.to_json %>" />
      </div>
      <div class="field is-grouped is-grouped-right">
        <p class="control">
          <%= f.submit class: "button is-success" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
